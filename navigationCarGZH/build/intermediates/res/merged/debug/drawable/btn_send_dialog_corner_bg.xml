<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <!-- 在没有焦点、没有选中、没有按下的状态,显示的图片 --> 
   <item android:state_focused="false" 
       android:state_selected="false" 
       android:state_pressed="false"
   >
       <shape>
	     <solid android:color="@color/dialog_btn_submit_border_color"></solid> 
	     <corners 
	        android:topLeftRadius="25dp"
	        android:topRightRadius="25dp"
	        android:bottomLeftRadius="25dp"
	        android:bottomRightRadius="25dp"
	        />
	    <stroke android:color="@color/dialog_btn_border_color" android:width="1px"></stroke>
       </shape>    
   </item>
   
   <item
       android:state_focused="true" 
       android:state_selected="false"  
       android:state_pressed="false" 
    >
        <shape>
	     <solid android:color="@color/dialog_btn_submit_press_color"></solid> 
	     <corners 
	        android:topLeftRadius="25dp"
	        android:topRightRadius="25dp"
	        android:bottomLeftRadius="25dp"
	        android:bottomRightRadius="25dp"
	        />
	    <stroke android:color="@color/dialog_btn_border_color" android:width="1px"></stroke>
       </shape>    
        
    </item>
    <item
       android:state_focused="false" 
       android:state_selected="true"  
       android:state_pressed="false" 
    >
        <shape>
	     <solid android:color="@color/dialog_btn_submit_press_color"></solid> 
	     <corners 
	        android:topLeftRadius="25dp"
	        android:topRightRadius="25dp"
	        android:bottomLeftRadius="25dp"
	        android:bottomRightRadius="25dp"
	        />
	    <stroke android:color="@color/dialog_btn_border_color" android:width="1px"></stroke>
       </shape>
   </item>
   <!-- 按下状态 -->
   <item
       android:state_focused="false" 
       android:state_selected="false"  
       android:state_pressed="true" 
    >
       <shape>
	     <solid android:color="@color/dialog_btn_submit_press_color"></solid> 
	     <corners 
	        android:topLeftRadius="25dp"
	        android:topRightRadius="25dp"
	        android:bottomLeftRadius="25dp"
	        android:bottomRightRadius="25dp"
	        />
	    <stroke android:color="@color/dialog_btn_border_color" android:width="1px"></stroke>
       </shape>    
   </item>
</selector>

