<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="#ffffff"
    >
    <LinearLayout  
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/friend_loc_img"
            android:contentDescription="@string/title_activity_friends_location"/>
        
   </LinearLayout>     
    <LinearLayout  
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:gravity="center"
        >
       <LinearLayout  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        >  
        <!-- 友邻ID-->
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friend_ID"
            android:layout_weight="1"
            android:textColor="#000000"
        />
        <TextView 
            android:id="@+id/friends_loc_user_address_tx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
        />
        <!--报告时间-->
        <TextView 
            android:id="@+id/friends_loc_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#000000"
        />
        </LinearLayout>
      <LinearLayout  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        >  
        <!-- 经度-->
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friend_lon"
            android:layout_weight="1"
            android:textColor="#000000"
        />
        <TextView 
            android:id="@+id/friends_loc_lon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
        />
        <!--纬度-->
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friend_lat"
            android:layout_weight="1"
            android:textColor="#000000"
        />
        <TextView 
            android:id="@+id/friends_loc_lat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
        />
        
        </LinearLayout>
        <LinearLayout  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" 
        >  
        <!-- 高程-->
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friend_height"
            android:layout_weight="1"
            android:textColor="#000000"
        />
        <TextView 
            android:id="@+id/friends_loc_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
        />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
        />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
        />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>  