<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/black">

    <include
        android:id="@+id/settingforlikeheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/settingforlike_header" />

    <RelativeLayout
        android:id="@+id/rl_settingforlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingforlikeheader"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_settingForLikeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" 
            android:background="@android:color/black"
            android:divider="@color/bd_manager_divider_color">
        </ListView>
    </RelativeLayout>

</RelativeLayout>