<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_linear_layout"
    >
    
    <Button android:id="@+id/location_known"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="位置报知"/>
    
    <Button android:id="@+id/location_send"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:text="位置报送"/>
    
    <Button android:id="@+id/message_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短报文"/>
   
     <Button android:id="@+id/rdss_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RDSS卫星状态"/>
     
      <Button android:id="@+id/rnss_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RNSS卫星状态"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
       <TextView
        android:id="@+id/local_address" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
        <TextView
        android:id="@+id/local_iccard_status" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
       <TextView
        android:id="@+id/service_frequency" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
       <TextView
        android:id="@+id/communication_level" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
       <TextView
        android:id="@+id/card_type" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    </LinearLayout>
</LinearLayout>
