<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TableRow>

        <TextView
            android:id="@+id/tv_subpoi_tel"
            style="@style/common_style_for_20dip_black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_span="3"
            android:text="TextView" >
        </TextView>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv_subpoi_addr"
            style="@style/common_style_for_20dip_black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_span="3"
            android:text="TextView" >
        </TextView>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv_subpoi_district"
            style="@style/common_style_for_20dip_black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_span="3"
            android:text="TextView" >
        </TextView>
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn_subpoi_fav"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="@string/searchpoiresult_fav"
            android:textSize="16dip" >
        </Button>

        <Button
            android:id="@+id/btn_subpoi_del"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/searchpoiresult_del"
            android:textSize="16dip" >
        </Button>

        <Button
            android:id="@+id/btn_subpoi_edit"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/searchpoiresult_edit"
            android:textSize="16dip" >
        </Button>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/btn_subpoi_location"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="@string/searchpoiresult_location"
            android:textSize="16dip" >
        </Button>

        <Button
            android:id="@+id/btn_subpoi_startPoint"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:text="@string/searchpoiresult_startPoint"
            android:textSize="16dip" >
        </Button>

        <Button
            android:id="@+id/btn_subpoi_endPoint"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:text="@string/searchpoiresult_endPoint"
            android:textSize="16dip" >
        </Button>
    </TableRow>

</TableLayout>