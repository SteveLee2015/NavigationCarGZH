<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bd_time_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/time_bg" 
    >
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_bdtime"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:gravity="center"
     />
    
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_marginTop="60dp"
    >
	    <TextView
	        android:id="@+id/time_year_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/white"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:background="@drawable/time_num_bg"
	      />
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/time_year"
	      />
         <TextView
	        android:id="@+id/time_month_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/white"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:background="@drawable/time_num_bg"
	      />
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/time_month"
	      />
         <TextView
	        android:id="@+id/time_day_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/white"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:background="@drawable/time_num_bg"
	      />
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/time_day"
	      />
   </LinearLayout>
   <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_marginTop="40dp"
    >
	    <TextView
	        android:id="@+id/time_hour_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/white"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:background="@drawable/time_num_bg"
	      />
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/time_hour"
	      />
         <TextView
	        android:id="@+id/time_minute_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/white"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:background="@drawable/time_num_bg"
	      />
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/time_minute"
	      />
         <TextView
	        android:id="@+id/time_second_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/white"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:background="@drawable/time_num_bg"
	      />
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/time_second"
	      />
   </LinearLayout>
   <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:paddingLeft="4dp"
	    android:layout_marginTop="40dp"
    >
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/time_weekday"
	      />
	    <TextView
	        android:id="@+id/time_weekday_tx"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/white"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:background="@drawable/time_num_bg"
	      />
    </LinearLayout>
    
    <Button 
          android:id="@+id/bd_check_time_btn"
          android:layout_width="wrap_content"
          android:layout_height="38dp"
          android:text="@string/bd_check_time"
          android:layout_marginTop="40dp"
          android:layout_gravity="center"
          android:background="@drawable/btn_bg_selector"
          android:textSize="15sp"
        /> 
   
</LinearLayout>