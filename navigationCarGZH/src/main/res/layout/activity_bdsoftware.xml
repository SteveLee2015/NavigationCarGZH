<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/function_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:src="@drawable/icon" />
        
        <TextView
            android:id="@+id/project_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="北斗导航软件"
            android:textSize="24dp" />

        <!-- 软件版本 -->
        <TextView
            android:id="@+id/project_version_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="@dimen/txtSize" />
        
         <!-- 地图版本 -->
        <TextView
            android:id="@+id/map_version_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="1.0.0"
            android:textSize="@dimen/txtSize" />
        
         <TextView
            android:id="@+id/project_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/software_about_date"
            android:textSize="@dimen/txtSize" />
         
   </LinearLayout>
   
   <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:orientation="horizontal"
         android:gravity="center"
         android:layout_weight="1"
         android:layout_marginTop="33dp"
         >
         <Button
            android:id="@+id/update_version_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_selector"
            android:text="软件升级"
            android:padding="8dp"
            android:textSize="@dimen/txtSize"
            android:textColor="@android:color/white" />
     </LinearLayout>   
</LinearLayout>