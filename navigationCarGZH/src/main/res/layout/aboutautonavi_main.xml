<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/common_menu_header" />

        <TextView
            android:id="@+id/tv_about_autonavi_group"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_group" />

        <TextView
            android:id="@+id/tv_about_autonavi_name"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_name" />

        <TextView
            android:id="@+id/tv_about_autonavi_cpname"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_cpname" />

        <TextView
            android:id="@+id/tv_about_autonavi_shenTu"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_shenTu" />

        <TextView
            android:id="@+id/tv_about_autonavi_softnum"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_softnum" />

        <TextView
            android:id="@+id/tv_about_autonavi_drivenum"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_drivenum" />

        <TextView
            android:id="@+id/tv_about_autonavi_datanum"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_datanum" />

        <TextView
            android:id="@+id/tv_about_autonavi_author"
            style="@style/common_style_for_20dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_author" />

        <TextView
            android:id="@+id/tv_about_autonavi_desc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutautonavi_desc" />
    </LinearLayout>

</ScrollView>